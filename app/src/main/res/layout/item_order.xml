<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       android:paddingHorizontal="@dimen/margin_horizontal"
       android:layout_marginTop="@dimen/margin_Modules"
       >
       <ImageView
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:src="@drawable/order"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/text_16"
           android:textColor="@color/head_text_color"
           android:text="00011456111"
           android:layout_marginLeft="@dimen/topbar_title_bottom_margin"
           />
       <View
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/text_16"
           android:textColor="@color/warning_red"
           android:text="待验瓶"

           />
   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/margin_Modules"
        android:background="@color/_1b1b1b"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/margin_horizontal"
        >



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:lineSpacingExtra="0sp"
                    android:text="世贸吴彦祖 （先生）"
                    android:textColor="@color/lpg_text_dark_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/comment_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:lineSpacingExtra="0sp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="3dp"
                    android:text="6月20日 9:30-11:00"
                    android:textColor="@color/msb_color"
                    android:textSize="12sp" />

            </LinearLayout>
            <TextView
                android:id="@+id/comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:lineSpacingExtra="0sp"
                android:text="地址：海口市龙华区金贸西路诚田大厦24楼 （有电梯）"
                android:textColor="@color/lpg_text_light_color"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/margin_Modules"
                />



        </LinearLayout>

                <ImageView
                    android:id="@+id/comment_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order"
                    android:layout_gravity="center"
                    />


        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="18dp"
        android:background="@color/_1b1b1b"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/margin_horizontal"
        android:layout_marginTop="@dimen/margin_Modules"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/head_text_color"
            android:text="5kg气瓶"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/lpg_text_light_color"
            android:text="x1"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/margin_horizontal"
        android:layout_marginTop="@dimen/margin_Modules"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/head_text_color"
            android:text="15kg气瓶"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/lpg_text_light_color"
            android:text="x1"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/margin_horizontal"
        android:layout_marginTop="@dimen/margin_Modules"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/head_text_color"
            android:text="50kg气瓶"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/lpg_text_light_color"
            android:text="x1"

            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="18dp"
        android:background="@color/_1b1b1b"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/margin_horizontal"
        android:layout_marginTop="@dimen/margin_Modules"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/lpg_text_light_color"
            android:text="总价"
            />
        <TextView
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:textColor="@color/msb_color"
            android:text="300.00"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="18dp"
        android:background="@color/_1b1b1b"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/margin_horizontal"
        android:padding="@dimen/calendar_day_headers_paddingbottom"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="@dimen/text_16"
            android:textColor="@color/white"
            android:background="@drawable/lpg_btn_corner"
            android:text="付款"
            />

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line_color_lib"
        android:layout_below="@id/topbar"
        />
</LinearLayout>