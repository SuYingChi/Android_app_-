<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#030303"
        android:textSize="@dimen/text_16"
        android:textStyle="bold"
        tools:text="选择支付方式" />


    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_gray" />

        <com.msht.mshtLpg.mshtLpgMaster.customView.MyRadioButton
            android:id="@+id/id_radio_alipay"
            android:layout_width="match_parent"
            android:layout_height="56dip"
            android:background="@drawable/bg_imagetext_button"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/alipay_h"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/selector_my_radiobutton"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="支付宝"
            android:textColor="#444444"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_gray" />

        <com.msht.mshtLpg.mshtLpgMaster.customView.MyRadioButton
            android:id="@+id/id_radio_wechat"
            android:layout_width="match_parent"
            android:layout_height="56dip"
            android:background="@drawable/bg_imagetext_button"
            android:button="@null"
            android:drawableLeft="@drawable/wechat_pay_h"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/selector_my_radiobutton"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="微信支付"
            android:textColor="#444444"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line_gray" />
    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:background="@color/white"
            android:text="取消"
            android:textColor="#0076ff"
            android:textSize="@dimen/text_16" />


        <TextView
            android:id="@+id/dialog_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="确定"
            android:textColor="#0076ff"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>