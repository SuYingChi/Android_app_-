<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color_lib"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >

    <com.msht.mshtLpg.mshtLpgMaster.customView.TopBarView
        android:id="@+id/exchange_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height_normol"
        android:background="@color/msb_color"
        app:title_text="钢瓶置换" />

    <include layout="@layout/item_rcl_exchange_steel_bottle_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_pay_orders_v2_bottom"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcl_exchange_steel_bottle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>