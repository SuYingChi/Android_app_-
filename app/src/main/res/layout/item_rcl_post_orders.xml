<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_Modules"
    android:orientation="horizontal"
    >
<ImageView
    android:id="@+id/steel_bottle_iv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/login_logol"
    android:layout_marginLeft="@dimen/margin_Modules"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_Modules"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/steel_bottle_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5KG瓶装气"
            android:textColor="@color/lpg_text_dark_color"
            android:textSize="@dimen/text_16" />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/steel_bottle_model"
            android:text="数量："
            android:textColor="@color/lpg_text_light_color" />

        <TextView
            android:id="@+id/tv_orders_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/steel_bottle_model"
            android:text="6"
            android:textSize="@dimen/text_nomal" />
       </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/tv_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_text_size_middle_2"
        android:textColor="@color/warning_red"
        android:text="92.00"
        android:layout_marginRight="@dimen/margin_Modules"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>