<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/line_color_lib"
    >
    <view
        android:layout_width="match_parent"
        android:layout_height="@dimen/rcl_margin"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="@dimen/margin_Modules"
       android:background="@color/white"
       >
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/orders"
           />
       <TextView
           android:id="@+id/to_storaage_orders_number"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="001241242"
           android:layout_marginLeft="@dimen/margin_Modules"
           />
       <View
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"/>
       <TextView
           android:id="@+id/order_status"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="待验瓶"
           />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/five_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Modules"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/head_text_color"
                android:text="5kg气瓶"

                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/five_kg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:textColor="@color/lpg_text_light_color"
                android:text="x1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fifteen_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Modules"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/head_text_color"
                android:text="15kg气瓶"

                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/fifteen_kg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/lpg_text_light_color"
                android:text="x1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fifty_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Modules"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/head_text_color"
                android:text="50kg气瓶"

                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/fifty_kg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:textColor="@color/lpg_text_light_color"
                android:text="x1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Modules"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/head_text_color"
                android:text="重新入库共计"
                android:layout_marginRight="@dimen/margin_Modules"
                />
            <TextView
                android:id="@+id/total_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:textColor="@color/lpg_text_light_color"
                android:text="x5"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Modules"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scan_code"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/head_text_color"
                android:text="扫描入库"
                android:layout_marginRight="@dimen/margin_Modules"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/lpg_text_light_color"
                android:text="修改"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>