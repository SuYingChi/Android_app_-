<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/line_color_lib"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/rcl_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_Modules">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/orders" />

        <TextView
            android:id="@+id/item_rcl_transfer_to_storage_orders_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_Modules"
            android:textSize="@dimen/text_16"
            android:text="001241242" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_rcl_transfer_to_storage_orders_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:text="待验瓶" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/ll_item_rcl_transfer_to_storage_orders_five_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Modules"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5kg气瓶"
                android:textSize="@dimen/text_16"
                android:textColor="@color/head_text_color"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/item_rcl_transfer_to_storage_orders_five_kg_number"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:inputType="number"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/lpg_text_light_color"
                android:textSize="@dimen/text_16"
                android:paddingBottom="@dimen/margin_Modules"
                android:paddingLeft="@dimen/margin_Modules"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Modules">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:text="15kg气瓶"
                android:textColor="@color/head_text_color"

                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/item_rcl_transfer_to_storage_orders_fifteen_kg_number"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:background="@drawable/edit_text_background"
                android:inputType="number"
                android:textColor="@color/lpg_text_light_color"
                android:paddingBottom="@dimen/margin_Modules"
                android:paddingLeft="@dimen/margin_Modules"
                android:textSize="@dimen/text_16"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Modules">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16"
                android:text="50kg气瓶"
                android:textColor="@color/head_text_color"

                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/item_rcl_transfer_to_storage_orders_fifty_kg_number"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="@color/lpg_text_light_color"
                android:text="0"
                android:inputType="number"
                android:background="@drawable/edit_text_background"
                android:textSize="@dimen/text_16"
                android:paddingBottom="@dimen/margin_Modules"
                android:paddingLeft="@dimen/margin_Modules"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Modules">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_Modules"
                android:text="重新入库共计"
                android:textSize="@dimen/text_16"
                android:textColor="@color/head_text_color" />

            <TextView
                android:id="@+id/item_rcl_transfer_to_storage_orders_total_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"

                android:textColor="@color/lpg_text_light_color"
                android:textSize="@dimen/text_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Modules">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scan_code" />

            <TextView
                android:id="@+id/tv_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_Modules"
                android:text="扫描入库"
                android:textSize="@dimen/text_16"
                android:textColor="@color/head_text_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_rcl_transfer_to_storage_orders_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改"
                android:textSize="@dimen/text_16"
                android:textColor="@color/lpg_text_light_color" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>