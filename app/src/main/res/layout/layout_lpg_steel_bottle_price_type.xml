                android:textSize="14sp" />

            <TextView
                android:id="@+id/id_tv_pledge3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_bottle_type3"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/id_pledge_text3"
                android:layout_toRightOf="@+id/id_pledge_text3"
                android:text="@string/default_text"
                android:textColor="@color/lpg_text_light_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/id_tv_amount3"
                android:layout_width="wrap_content"
