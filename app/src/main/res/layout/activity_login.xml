<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    >

    <ImageView
        android:id="@+id/iv_login_logol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:src="@drawable/login_logol" />

    <LinearLayout
        android:id="@+id/ll_login_mobile_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_login_logol"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="67dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/my_income" />

        <EditText
            android:id="@+id/et_login_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:paddingBottom="@dimen/margin_Modules"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/lpg_text_dark_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/ll_login_mobile_input"
        android:layout_alignRight="@+id/ll_login_mobile_input"
        android:layout_below="@+id/ll_login_mobile_input"
        android:background="@color/line_color_lib" />

    <LinearLayout
        android:id="@+id/ll_login_mobile_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll_login_mobile_input"
        android:layout_alignRight="@+id/ll_login_mobile_input"
        android:layout_below="@+id/ll_login_mobile_input"
        android:layout_marginTop="34dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/login_login_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:paddingBottom="@dimen/margin_Modules"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/login_passwor"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_16"
            android:inputType="numberPassword"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/ll_login_mobile_input"
        android:layout_alignRight="@+id/ll_login_mobile_input"
        android:layout_below="@+id/ll_login_mobile_input_password"
        android:background="@color/line_color_lib" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/ll_login_mobile_input"
        android:layout_alignRight="@+id/ll_login_mobile_input"
        android:layout_below="@+id/ll_login_mobile_input_password"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_normal"
        android:text="登录"
        android:textColor="@color/white_lib"
        android:textSize="@dimen/text_16" />

