<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<View
    android:id="@+id/topbar"
    android:layout_height="50dp"
    android:layout_width="match_parent"
    android:background="@color/bg_phone"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="账号登录"
        android:textColor="@color/text_color_white"
        android:textSize="19sp" />
    <LinearLayout
        android:id="@+id/mobile_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:layout_below="@+id/topbar"
        android:layout_marginTop="67dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/colorAccent"
            />
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#66ffffff"
            android:layout_marginLeft="18dp"
            />
        <EditText
            android:id="@+id/mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:hint="请输入手机号"
            android:textSize="15sp"
            android:textColorHint="#66ffffff"
            android:background="@null"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#ffffff"
            android:textCursorDrawable="@null"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#66ffffff"
        android:layout_alignLeft="@+id/mobile_input"
        android:layout_below="@+id/mobile_input"
        android:layout_alignRight="@+id/mobile_input"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:id="@+id/mobile_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mobile_input"
        android:layout_alignRight="@+id/mobile_input"
        android:layout_below="@+id/mobile_input"
        android:layout_marginTop="34dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@color/colorAccent"
            />
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#66ffffff"
            android:layout_marginLeft="18dp"
            />
        <EditText
            android:id="@+id/login_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/login_passwor"
            android:textColorHint="#66ffffff"
            android:textSize="15sp"
            android:background="@null"
            android:textColor="#ffffff"
            android:textCursorDrawable="@null"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#66ffffff"
        android:layout_alignLeft="@+id/mobile_input"
        android:layout_below="@+id/mobile_input_password"
        android:layout_alignRight="@+id/mobile_input"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#cc00a4ff"
        android:text="登录"
        android:textColor="@color/white_lib"
        android:textSize="17sp"
        android:layout_alignLeft="@+id/mobile_input"
        android:layout_alignRight="@+id/mobile_input"
        android:layout_below="@+id/mobile_input_password"
        android:layout_marginTop="40dp"
        />
</RelativeLayout>