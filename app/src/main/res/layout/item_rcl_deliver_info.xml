<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_delive_info"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_deliver_track_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_Modules"
            android:text="您的订单已签收，感谢您使用瓶装气业务，期待您的再次使用"
            android:textColor="@color/lpg_text_dark_color"
            android:textSize="@dimen/text_nomal" />

        <TextView
            android:id="@+id/tv_deliver_track_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_Modules"
            android:text="2017-08-05 8:05:50"
            android:textColor="@color/lpg_text_dark_color"
            android:textSize="@dimen/text_nomal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/lin_width"
            android:layout_marginTop="@dimen/margin_Modules"
            android:background="@color/line_color_lib" />
    </LinearLayout>
</LinearLayout>