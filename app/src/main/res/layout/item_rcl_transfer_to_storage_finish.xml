<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/line_color_lib"
    android:orientation="vertical">

    <view
        android:layout_width="match_parent"
        android:layout_height="@dimen/rcl_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_Modules">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/orders" />

        <TextView
            android:id="@+id/item_rcl_transfer_to_storage_orders_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_Modules"
            android:text="001241242" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_rcl_transfer_to_storage_orders_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_item_rcl_transfer_to_storage_orders_five_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Modules">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5kg气瓶"
                android:textColor="@color/head_text_color"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_rcl_transfer_to_storage_orders_five_kg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textColor="@color/lpg_text_light_color"
                android:textSize="@dimen/text_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Modules">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="15kg气瓶"
                android:textColor="@color/head_text_color"

                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_rcl_transfer_to_storage_orders_fifteen_kg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="x1"
                android:textColor="@color/lpg_text_light_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Modules">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="50kg气瓶"
                android:textColor="@color/head_text_color"

                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_rcl_transfer_to_storage_orders_fifty_kg_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textColor="@color/lpg_text_light_color"
                android:textSize="@dimen/text_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/margin_Modules">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_Modules"
                android:text="共计"
                android:textColor="@color/head_text_color" />

            <TextView
                android:id="@+id/item_rcl_transfer_to_storage_orders_total_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x5"
                android:textColor="@color/lpg_text_light_color"
                android:textSize="@dimen/text_16" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>