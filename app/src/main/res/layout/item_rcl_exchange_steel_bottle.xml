<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_Modules">

    <Spinner
        android:id="@+id/exchange_steel_type_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" />

    <Spinner
        android:id="@+id/exchange_steel_years_spinner"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/exchange_steel_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_Modules"
            android:background="@color/line_color_lib"
            android:paddingLeft="@dimen/margin_Modules"
            android:paddingRight="@dimen/margin_Modules"
            android:text="-"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/exchange_steel_fifty_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_Modules"
            android:background="@color/line_color_lib"
            android:paddingLeft="@dimen/margin_Modules"
            android:paddingRight="@dimen/margin_Modules"
            android:text="1"
            android:textSize="@dimen/text_16"

            />

        <TextView
            android:id="@+id/exchange_steel_fity_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/line_color_lib"
            android:paddingLeft="@dimen/margin_Modules"
            android:paddingRight="@dimen/margin_Modules"
            android:text="+"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/exchange_steel_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="5.00" />
</LinearLayout>
