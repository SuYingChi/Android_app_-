<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/margin"
    android:paddingBottom="@dimen/margin"
    >
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:orientation="horizontal"
    >
    <Spinner
        android:id="@+id/exchange_steel_weight_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        />

    <Spinner
    android:id="@+id/exchange_steel_years_spinner"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center" />
    <Spinner
        android:id="@+id/exchange_steel_level_spinner"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" />
</LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/exchange_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_Modules"
            android:background="@color/line_color_lib"
            android:paddingLeft="@dimen/margin_Modules"
            android:paddingRight="@dimen/margin_Modules"
            android:text="-"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/exchange_steel_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_Modules"
            android:background="@color/line_color_lib"
            android:paddingLeft="@dimen/margin_Modules"
            android:paddingRight="@dimen/margin_Modules"
            android:text="1"
            android:textSize="@dimen/text_16"

            />

        <TextView
            android:id="@+id/exchange_steel_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/line_color_lib"
            android:paddingLeft="@dimen/margin_Modules"
            android:paddingRight="@dimen/margin_Modules"
            android:text="+"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/exchange_steel_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="5.00"
        android:paddingLeft="@dimen/margin_Modules"
        android:paddingRight="@dimen/margin_Modules"
        />
</LinearLayout>
