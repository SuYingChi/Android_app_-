<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_orders_detail_command_topbar_client_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tv_comman_topbar_title"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_horizontal"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_Modules"
        android:text="海口市龙华区诚田大厦A栋24层2房"
        android:textColor="@color/lpg_text_dark_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_item_rcl_orders_detail_pay_v1_elevator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_Modules"
        android:text="(有电梯)"
        android:textColor="@color/lpg_text_dark_color"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_Modules"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_rcl_orders_detail_pay_v1_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="世贸彭于晏(先生)"
            android:textColor="@color/lpg_text_light_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_item_rcl_orders_detail_pay_v1_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:gravity="top"
            android:text="13012345678"
            android:textColor="@color/lpg_text_light_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/tv_item_rcl_orders_detail_pay_v1_call_phone_btn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:src="@drawable/call_phone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="18dp"
        android:background="@color/_1b1b1b" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_Modules">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约时间："
            android:textColor="@color/lpg_text_light_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_item_rcl_orders_detail_pay_v1_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:text="2018.06.08"
            android:textColor="@color/lpg_text_light_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_item_rcl_orders_detail_pay_v1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:text="10:00 - 12:00"
            android:textColor="@color/lpg_text_light_color"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
