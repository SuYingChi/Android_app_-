<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color"
    android:orientation="vertical">

    <View
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/msb_color" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_Modules"
        android:text="世贸彭于晏"
        android:textColor="@color/white"
        android:textSize="@dimen/text_top_title" />

    <TextView
        android:id="@+id/user_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_Modules"
        android:text="服务点：海口市龙华区国贸网点"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_Modules"
        android:src="@drawable/order" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_Modules"
        android:background="@drawable/onlline"
        android:gravity="center"
        android:text="在线"
        android:textColor="@color/warning_red" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar"
        android:background="@color/white"
        android:paddingTop="15dp"
        android:paddingHorizontal="15dp">

        <RelativeLayout
            android:id="@+id/my_steel_bottle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/iv_my_steel_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/steel_bottle" />

            <TextView
                android:id="@+id/tv_my_steel_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的钢瓶"
                android:layout_alignLeft="@id/iv_my_steel_bottle"
                android:layout_below="@id/iv_my_steel_bottle"
                android:textColor="@color/lpg_text_dark_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mobile_open_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mobile_open_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/steel_bottle"

                />

            <TextView
                android:id="@+id/tv_mobile_open_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="移动开户"
                android:layout_alignLeft="@id/iv_mobile_open_account"
                android:layout_below="@id/iv_mobile_open_account"
                android:textColor="@color/lpg_text_dark_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/out_warehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_out_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/steel_bottle"

                />

            <TextView
                android:id="@+id/tv_out_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="调拨出库"
                android:layout_alignLeft="@id/iv_out_warehouse"
                android:layout_below="@id/iv_out_warehouse"
                android:textColor="@color/lpg_text_dark_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/in_warehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_in_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/steel_bottle"

                />

            <TextView
                android:id="@+id/tv_in_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="调拨入库"
                android:layout_alignLeft="@id/iv_in_warehouse"
                android:layout_below="@id/iv_in_warehouse"
                android:textColor="@color/lpg_text_dark_color" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_1"
        android:background="@color/white"
        android:paddingVertical="20dp"
        android:paddingHorizontal="15dp">

        <RelativeLayout
            android:id="@+id/register_steel_bottle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/iv_register_steel_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/steel_bottle" />

            <TextView
                android:id="@+id/tv_register_steel_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="钢瓶注册"
                android:layout_alignLeft="@id/iv_register_steel_bottle"
                android:layout_below="@id/iv_register_steel_bottle"
                android:textColor="@color/lpg_text_dark_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/check_steel_bottle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_check_steel_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/steel_bottle"

                />

            <TextView
                android:id="@+id/tv_check_steel_bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="钢瓶检验"
                android:layout_alignLeft="@id/iv_check_steel_bottle"
                android:layout_below="@id/iv_check_steel_bottle"
                android:textColor="@color/lpg_text_dark_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/get_steel_bottle_out_warehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_get_steel_bottle_out_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/steel_bottle"

                />

            <TextView
                android:id="@+id/tv_get_steel_bottle_out_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="领瓶出库"
                android:layout_alignLeft="@id/iv_get_steel_bottle_out_warehouse"
                android:layout_below="@id/iv_get_steel_bottle_out_warehouse"
                android:textColor="@color/lpg_text_dark_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/get_steel_bottle_in_warehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_get_steel_bottle_in_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/steel_bottle"

                />

            <TextView
                android:id="@+id/tv_get_steel_bottle_in_warehouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="返瓶入库"
                android:layout_alignLeft="@id/iv_get_steel_bottle_in_warehouse"
                android:layout_below="@id/iv_get_steel_bottle_in_warehouse"
                android:textColor="@color/lpg_text_dark_color" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_2"
        android:id="@+id/ll_my_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/white"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/my_income"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lpg_text_dark_color"
            android:textSize="@dimen/text_nomal"
            android:text="我的收入"
            android:layout_marginLeft="@dimen/margin_horizontal"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/my_income"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/ll_my_income"
        android:id="@+id/ll_about_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/about_me"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lpg_text_dark_color"
            android:textSize="@dimen/text_nomal"
            android:text="关于我们"
            android:layout_marginLeft="@dimen/margin_horizontal"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/about_me"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/ll_about_me"
        android:id="@+id/ll_register_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unregister_login"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lpg_text_dark_color"
            android:textSize="@dimen/text_nomal"
            android:text="注销登录"
            android:layout_marginLeft="@dimen/margin_horizontal"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/unregister_login"
            />
    </LinearLayout>
</RelativeLayout>