<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.msht.mshtLpg.mshtLpgMaster.customView.TopBarView
    android:id="@+id/topbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height_normol"
    android:background="@color/msb_color"
    android:padding="@dimen/margin_Modules"
    app:title_text = "我的收入"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/msb_color"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总收入 （元）"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_horizontal"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22.00"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:layout_marginTop="@dimen/margin_Modules"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/tv_month_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月份统计 >"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_Modules"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_Modules"
        />
    </LinearLayout>
</LinearLayout>