<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_color"
    android:orientation="vertical">

    <com.msht.mshtlpgmaster.customView.TopBarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/msb_color"
        app:title_text="移动开户" />

    <LinearLayout
        android:id="@+id/ll_location_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_Modules">

        <TextView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/lpg_text_dark_color"
            android:textSize="@dimen/text_nomal" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:hint="世贸吴彦祖"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:textColorHint="@color/text_hint"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:padding="@dimen/margin_Modules">

        <TextView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="@color/lpg_text_dark_color"
            android:textSize="@dimen/text_nomal" />

        <Spinner
            android:id="@+id/spinner_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:padding="@dimen/margin_Modules">

        <TextView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/lpg_text_dark_color"
            android:textSize="@dimen/text_nomal" />

        <EditText
            android:id="@+id/et_mobile_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:maxLines="1"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_user_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_Modules"
        android:background="@color/white"
        android:padding="@dimen/margin_Modules">

        <TextView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:text="用户地址"
            android:textColor="@color/lpg_text_dark_color"
            android:textSize="@dimen/text_nomal" />

        <TextView
            android:id="@+id/tv_user_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="请输入您的详细地址"
            android:textColor="@color/textcolor"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_elevator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:padding="@dimen/margin_Modules">

        <TextView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:text="电梯房"
            android:textColor="@color/lpg_text_dark_color"
            android:textSize="@dimen/text_nomal" />

        <Spinner
            android:id="@+id/spinner_elevator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_house_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:padding="@dimen/margin_Modules">

        <TextView
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:text="楼层"
            android:textColor="@color/lpg_text_dark_color"
            android:textSize="@dimen/text_nomal" />

        <!--<EditText
            android:id="@+id/et_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/edit_text_background"
            android:hint="A"
            android:maxLength="2"
            android:textColor="#ffffff"
            android:textColorHint="@color/text_hint"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="栋"
            android:textSize="15sp" />
-->
        <EditText
            android:id="@+id/et_floor"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_Modules"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/text_hint"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="楼"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_room"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_Modules"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:maxLength="2"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:textColorHint="@color/text_hint"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="房"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="《居民用户办理须知》"
        android:textColor="@color/colorPrimaryDark_lib" />

    <Button
        android:id="@+id/save_user_location"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_Modules"
        android:background="@drawable/btn_normal"
        android:text="提交"
        android:textColor="@color/white" />
</LinearLayout>