<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <com.msht.mshtLpg.mshtLpgMaster.customView.ListViewForScrollView
                android:id="@+id/id_search_recycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.msht.mshtLpg.mshtLpgMaster.customView.ListViewForScrollView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="45dp">
                <TextView
                    android:id="@+id/id_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:text="找不到地址?"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/id_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/id_text1"
                    android:layout_marginTop="20dp"
                    android:text="请尝试输入小区，写字楼名,商铺，公司名"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>